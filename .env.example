# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/product_to_code

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo

# Langfuse Observability (optional but recommended)
# For LOCAL Langfuse (run: docker-compose -f langfuse/docker-compose.yml up -d)
# 1. Open http://localhost:3000 and create an account
# 2. Go to Settings > API Keys and create new keys
# 3. Copy the keys below
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_HOST=http://localhost:3000  # Use this for local Langfuse
# LANGFUSE_HOST=https://cloud.langfuse.com  # Use this for cloud Langfuse

# Tavily Web Search (optional - can use OpenAI web search instead)
TAVILY_API_KEY=tvly-your-tavily-api-key

# Application Settings
APP_NAME=Product-to-Code System
DEBUG=false
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]

# Agent Configuration
MAX_RETRIES=3
CHECKPOINT_DIR=./checkpoints
