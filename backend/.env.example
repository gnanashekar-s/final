# Database Configuration
# For local development with Docker, use:
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/product_to_code

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo

# Langfuse Observability (optional but recommended for debugging)
# For LOCAL Langfuse:
#   1. Run: docker-compose -f langfuse/docker-compose.yml up -d
#   2. Open http://localhost:3000 and create account
#   3. Go to Settings > API Keys and create new keys
#   4. Copy the keys below
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=http://localhost:3000

# Tavily Web Search (optional - provides better search results)
# Get your API key from: https://tavily.com
TAVILY_API_KEY=

# Application Settings
APP_NAME=Product-to-Code System
DEBUG=true
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]

# Agent Configuration
MAX_RETRIES=3
CHECKPOINT_DIR=./checkpoints
